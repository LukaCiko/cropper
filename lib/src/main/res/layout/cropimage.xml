<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.cropper.lib.CropImageView
        android:id="@+id/cropper_image"
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:weightSum="100">


        <ImageButton
            android:id="@+id/cropper_discard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_cancel"
            android:background="@drawable/btn_default_holo_light"/>

        <ImageButton
            android:id="@+id/croppper_rotate_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_rotate_left"
            android:background="@drawable/btn_default_holo_light"/>

        <ImageButton
            android:id="@+id/cropper_rotate_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_rotate_right"
            android:background="@drawable/btn_default_holo_light"/>

        <ImageButton
            android:id="@+id/cropper_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:src="@drawable/ic_accept"
            android:background="@drawable/btn_default_holo_light"/>

    </LinearLayout>
</FrameLayout>
