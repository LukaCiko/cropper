<?xml version="1.0" encoding="utf-8"?>
<resources>


	<style name="ConfirmButton" parent="android:Widget.Material.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:src">@drawable/ic_done_white_24dp</item>
		<item name="android:backgroundTint">@color/green</item>
	</style>

	<style name="CancelButton" parent="android:Widget.Material.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:src">@drawable/ic_close_white_24dp</item>
		<item name="android:backgroundTint">@color/red</item>
	</style>

	<style name="NeutralButton" parent="android:Widget.Material.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:backgroundTint">@color/blue</item>
	</style>
</resources>