<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.cropper.lib.CropImageView
		android:id="@+id/cropper_image"
		android:background="@color/cropper_dark_blue"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:orientation="horizontal"
		android:layout_margin="10dp"
		android:layout_gravity="bottom"
		android:weightSum="100">

		<ImageButton
			android:id="@+id/cropper_discard"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="35"
			android:layout_marginRight="8dp"
			style="@style/cropper_CancelButton"/>

		<ImageButton
			android:id="@+id/croppper_rotate_left"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="15"
			android:layout_marginRight="8dp"
			android:src="@drawable/cropper_ic_rotate_left_white_24dp"
			style="@style/cropper_NeutralButton"/>

		<ImageButton
			android:id="@+id/cropper_rotate_right"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="15"
			android:layout_marginRight="8dp"
			android:src="@drawable/cropper_ic_rotate_right_white_24dp"
			style="@style/cropper_NeutralButton"/>

		<ImageButton
			android:id="@+id/cropper_save"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="35"
			style="@style/cropper_ConfirmButton"/>

	</LinearLayout>

</FrameLayout>
