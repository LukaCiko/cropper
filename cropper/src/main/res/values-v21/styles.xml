<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="cropper_ConfirmButton" parent="android:Widget.Material.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:src">@drawable/cropper_ic_done_white_24dp</item>
		<item name="android:backgroundTint">@color/cropper_green</item>
	</style>

	<style name="cropper_CancelButton" parent="android:Widget.Material.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:src">@drawable/cropper_ic_close_white_24dp</item>
		<item name="android:backgroundTint">@color/cropper_red</item>
	</style>

	<style name="cropper_NeutralButton" parent="android:Widget.Material.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:backgroundTint">@color/cropper_blue</item>
	</style>

</resources>
